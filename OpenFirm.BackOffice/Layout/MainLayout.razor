@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">OpenFirm Admin</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoveUp" Variant="Variant.Filled" Color="Color.Inherit" Edge="Edge.End"/>
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/create-challange" Icon="@Icons.Material.Filled.AddCircle">New Challange</MudNavLink>
            <MudNavLink Href="/accounts" Icon="@Icons.Material.Filled.AccountBox">Accounts</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>